<div class="row">
    <div class="col s12 m6">
        <div class="card cardcenter">
            <div class="card-content white-text">
                <span class="card-title">Nowy komentarz</span>

<%= form_for @comment do |f| %>

    <div class="field">
        <%= f.label :content %>
        <%= f.text_field :content, autofocus: true %>
    </div>

    <%= f.hidden_field :addDate, :value => DateTime.now %>

    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.hidden_field :project_id, :value => params[:project_id] %>

    <div class="actions">
        <%= f.submit "Dodaj", :class => 'waves-effect waves-light btn' %>
    </div>

<% end %>

            </div>
        </div>
    </div>
</div>