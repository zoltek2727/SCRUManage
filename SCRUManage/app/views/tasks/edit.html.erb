  <div class="row">
        <div class="col s12 m6">
          <div class="card cardcenter">
            <div class="card-content white-text">
              <span class="card-title">Edytuj zadanie</span>

<%= form_for @task do |f| %>

    <div class="field">
        <%= f.label :taskName %>
        <%= f.text_field :taskName, autofocus: true %>
    </div>

    <div class="field">
        <%= f.label :taskDescription %>
        <%= f.text_field :taskDescription %>
    </div>

        <div class="field">
        <%= f.label :taskStart %>
        <%= f.text_field :taskStart, class: "datepicker"%>
    </div>

        <div class="field">
        <%= f.label :taskEnd %>
        <%= f.text_field :taskEnd, class: "datepicker"%>
    </div>

        <%= f.label :sprint_id %>
        <%= f.collection_select :sprint_id, Sprint.order(:sprintName),:id,:sprintName, include_blank: false%>

    <div class="actions">
        <%= f.submit "Zapisz", :class => 'waves-effect waves-light btn' %>
    </div>

<% end %>

        </div>
          </div>
        </div>
      </div>