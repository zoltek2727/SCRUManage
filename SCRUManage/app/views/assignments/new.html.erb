<div class="row">
    <div class="col s12 m6">
        <div class="card cardcenter">
            <div class="card-content white-text">
                <span class="card-title">Nowy przydzia≈Ç</span>

<%= form_for @assignment do |f| %>

    <% @users = User.where.not(users: {id: User.select(:id).joins(:assignments).where(assignments: {project_id: params[:project_id]})}) %>

    <%= f.label :User %>
    <%= f.collection_select :user_id, @users.order(:email),:id,:email, include_blank: false%>

    <%= f.label :Rola %>
    <%= f.collection_select :projectRole_id, ProjectRole.order(:projRoleName),:id,:projRoleName, include_blank: false%>

    <%= f.hidden_field :project_id, :value => params[:project_id] %>

    <div class="actions">
        <%= f.submit "Przydziel", :class => 'waves-effect waves-light btn' %>
    </div>

<% end %>

            </div>
        </div>
    </div>
</div>